pipeline {
    agent any

    tools {
        nodejs '14.21.3'
    }

    stages {
        stage('Build') {
            steps {
                dir("/var/www/html/api-laraigo-dev") { 
                    sh 'pwd'
                    sh 'sudo git checkout testing'
                    sh 'sudo git pull'
                    sh 'npm install'
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'sudo pm2 restart 1'
                //comment test
            }
        }
    }
}
