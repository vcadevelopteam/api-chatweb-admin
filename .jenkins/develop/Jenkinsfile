pipeline {
    agent any

    tools {
        nodejs '14.21.3'
    }

    stages {
        stage('Build') {
            steps {
                sh 'rsync -av --delete * /var/www/html/api-laraigo-dev'
            }
        }
        stage('Deploy') {
            steps {
                sh 'cd /var/www/html/api-laraigo-dev'
                sh 'ls'
                sh 'sudo pm2 list'  // Use sudo to execute pm2 as root
            }
        }
    }
}
