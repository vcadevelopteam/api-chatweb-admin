pipeline {
    agent any

    tools {
        nodejs '14.21.3'
    }

    stages {
        stage('Build') {
            steps {
                sh 'rsync -av --delete * /var/www/html/api-laraigo-dev'
            }
        }
        stage('Deploy') {
            steps {
                script{
                    dir('/var/www/html/api-laraigo-dev') {
                        sh 'ls'
                        sh 'pm2 list'
                    }
                }
            }
        }
    }
}
