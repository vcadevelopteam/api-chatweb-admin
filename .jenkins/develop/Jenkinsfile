pipeline {
    agent any

    tools {
        nodejs '14.21.3'
    }

    stages {
        stage('Build') {
            steps {
                sh 'rsync -av --delete * /var/www/html/api-laraigo-dev'
            }
        }
        stage('Deploy') {
            steps {             
                sshCommand remote: remoteNode,
                            credentialsId: 'root-ssh-key',
                            command: """
                                cd /var/www/html/api-laraigo-dev
                                whoami
                                pwd
                                pm2 list
                            """
            }
        }
    }
}
