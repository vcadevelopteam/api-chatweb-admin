pipeline {
    agent any

    tools {
        nodejs '14.21.3'
    }

    stages {
        stage('Build') {
            steps {
                sh 'rsync -av --delete * /var/www/html/api-laraigo-dev'
            }
        }
        stage('Deploy') {
            steps {                
                script {
                    withCredentials([sshUserPrivateKey(credentialsId: 'root-ssh-key', usernameVariable: 'SSH_USER')]) {
                        sh """
                            export SSHPASS=$SSH_KEY
                            sshpass -p $SSHPASS ssh $SSH_USER@[remoteNode] 'cd /var/www/html/api-laraigo-dev ; whoami ; pwd ; pm2 list'
                        """
                    }
                }
            }
        }
    }
}
