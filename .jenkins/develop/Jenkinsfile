pipeline {
    agent any

    tools {
        nodejs '14.21.3'
    }

    stages {
        stage('Build') {
            steps {
                sh 'rsync -av --delete * /var/www/html/api-laraigo-dev'
            }
        }
        stage('Deploy') {
            steps {
                def nodePath = sh(script: 'which node', returnStdout: true).trim()

                // Use sudo with full path to pm2 and node
                sh "sudo ${nodePath} /root/.nvm/versions/node/v14.21.3/bin/pm2 restart 0"
            }
        }
    }
}
