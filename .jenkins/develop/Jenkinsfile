pipeline {
    agent any

    tools {
        nodejs '14.21.3'
    }

    stages {
        stage('Build') {
            steps {
                sh 'rsync -av --delete * /var/www/html/api-laraigo-dev'
            }
        }
        stage('Deploy') {
            steps {
                sh "mkdir -p /var/www/html/api-laraigo-dev@tmp && chmod 775 /var/www/html/api-laraigo-dev@tmp"
                dir('/var/www/html/api-laraigo-dev') {
                    sh "pm2 restart 0"
                }
            }
        }
    }
}
